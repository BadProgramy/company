<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Department">
    <resultMap id="result" type="Department">
        <result property="id" column="id"/>
        <result property="idParentDepartment" column="idParentDepartment"/>
        <result property="name" column="firstName"/>
        <result property="dateCreation" column="secondName"/>
        <result property="idParentDepartment" column="idParentDepartment"/>
    </resultMap>

    <insert id="insert" parameterType="Employee" keyProperty="id">
        INSERT INTO employee (id,idpost,firstname,secondname,floor,birthdate,contactnumber,email,reception,salary,head)
         VALUES (nextval('nextIdEmployee'),#{idPost},#{firstName},#{secondName},#{floor},
         #{birthDate},#{contactNumber},#{email},#{reception},#{salary},#{head});
    </insert>

    <select id="selectAll" resultMap="result">
        SELECT * FROM employee;
    </select>
</mapper>